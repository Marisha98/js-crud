<main class="main">
	{{> heading title="Мої замовлення"}}

	<div class="product-list">
		<div class="product-list__header">
			<div>ID </div>
			<div>Товари</div>
			<div>Сума замовлення</div>
			<div>Нараховані бонуси</div>
		</div>




		<div class="product-item">
			{{#each data.list}}
			<div class="product-item__data">
				<div>{{id}}</div>
				<div>{{title}}</div>
				<div>{{price}} грн</div>
				<div>{{bonus}} грн</div>
			</div>

			{{> divider}}
			{{/each}}
		</div>
</main>