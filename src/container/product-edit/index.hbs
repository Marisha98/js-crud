{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
	<h1 class="main__title">Редагування товару</h1>
	<section>
		{{#with data}}
		<div class="card">
			<div class="form">
				<h1 class="form__title">Інформація про товар</h1>
				<form method="POST" action="/product-edit">
					<div class="form__content">
						<div class="form__doubleField">
							<div class="form__field">
								<label for="name" class="form__label">Назва товару:</label>
								<input type="name" name="name" class="form__input" value="{{name}}" required>
							</div>
							<div class="form__field">
								<label for="price" class="form__label">Ціна:</label>
								<input type="number" name="price" class="form__input" value="{{price}}" required>
							</div>
							<div class="form__field">
								<label for="id" class="form__id">ID:</label>
								<input type="number" name="id" class="form__input" value="{{id}}" required>
							</div>
						</div>
						<div class="form__field">
							<label for="description" class="form__label">Короткий опис товару:</label>
							<input type="text" name="description" class="form__input input-height"
								value="{{description}}" required>
							<div class="form__description">Відображується у картці товару</div>
						</div>
						<div class="form__buttons">
							<button class="button btn-primary">Зберегти
								оновлення</button>
							<a href="/product-delete?id={{id}}" class="button btn-warning">Видалити
								товар</a>
						</div>

					</div>
				</form>
			</div>
		</div>
		{{/with}}
	</section>
</main>
